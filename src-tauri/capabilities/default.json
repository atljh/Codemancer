{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [{ "name": "python-backend" }]
    },
    "shell:allow-spawn",
    "shell:allow-kill",
    "dialog:allow-open"
  ]
}
